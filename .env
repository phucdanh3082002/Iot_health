# Environment Variables for IoT Health Monitoring System

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=sqlite:///data/health_monitor.db

# MQTT Broker
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=false

# REST API Server
API_SERVER_URL=http://localhost:8000
API_USERNAME=
API_PASSWORD=
API_TOKEN=

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Hardware GPIO Pins
MAX30102_INT_PIN=4
TEMP_SENSOR_PIN=17
BP_PUMP_PIN=18
BP_VALVE_PIN=19

# Display Settings
DISPLAY_FRAMEBUFFER=/dev/fb1
DISPLAY_ROTATION=0

# Audio
AUDIO_ENABLED=true
AUDIO_VOLUME=80